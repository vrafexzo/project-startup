style.
  /* Custom Toggler Button */
  .navbar-toggler {
    border: none;
    padding: 0.5rem;
    outline: none;
    box-shadow: none !important;
  }

  /* Icon container */
  .toggler-icon {
    width: 24px;
    height: 18px;
    position: relative;
    transition: all 0.3s ease-in-out;
  }

  /* Top & Bottom lines */
  .toggler-icon::before,
  .toggler-icon::after,
  .toggler-icon div {
    content: '';
    position: absolute;
    height: 2px;
    width: 100%;
    background-color: white;
    transition: all 0.3s ease-in-out;
    left: 0;
  }

  .toggler-icon::before {
    top: 0;
  }

  .toggler-icon div {
    top: 8px;
  }

  .toggler-icon::after {
    bottom: 0;
  }

  /* Animation to "X" */
  .navbar-toggler.toggler-open .toggler-icon::before {
    transform: rotate(45deg);
    top: 8px;
  }

  .navbar-toggler.toggler-open .toggler-icon div {
    opacity: 0;
  }

  .navbar-toggler.toggler-open .toggler-icon::after {
    transform: rotate(-45deg);
    bottom: 8px;
  }

  .scrolled .toggler-icon::before,
  .scrolled .toggler-icon::after,
  .scrolled .toggler-icon div {
    background-color: black;
  }

  @media (max-width: 991.98px) {
    #navbar.bg-white {
      background-color: white !important;
    }
  }

  #navbar {
    transition: all 0.3s ease-in-out;
  }

  #navbar.shadow-md {
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.25) !important;
  }

