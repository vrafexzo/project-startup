script.
  document.addEventListener('DOMContentLoaded', function () {
    const navbar = document.getElementById('navbar');
    const toggler = document.querySelector('.navbar-toggler');
    const collapse = document.getElementById('navbarNav');

    // Scroll background behavior
    function handleScroll() {
      if (window.scrollY > 50) {
        navbar.classList.add('bg-white', 'shadow-sm', 'scrolled');
      } else {
        navbar.classList.remove('bg-white', 'shadow-sm', 'scrolled');
      }
    }

    window.addEventListener('scroll', handleScroll);
    handleScroll(); // Run once on load

    // Toggle open background for mobile menu
    collapse.addEventListener('show.bs.collapse', function () {
      navbar.classList.add('bg-white', 'shadow-sm', 'scrolled');
    });

    collapse.addEventListener('hide.bs.collapse', function () {
      if (window.scrollY <= 50) {
        navbar.classList.remove('bg-white', 'shadow-sm', 'scrolled');
      }
    });

    // Animate toggler icon
    toggler.addEventListener('click', function () {
      this.classList.toggle('toggler-open');
    });
  });
